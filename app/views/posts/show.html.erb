
<% turbo_stream_from @post %>

<h2>Post</h2>
<div class="post">
  <div class="post-title">
    <strong>Title:</strong>
    <%= @post.title %>
  </div>
  <div class="post-description">
    <strong>Description:</strong>
    <%= @post.description %>
  </div>

  <div class="edit-post">
    <%= link_to "Edit Post", edit_post_path %>
  </div>

  <div class="delete-post">
    <%= link_to "Delete Post", post_path, method: :delete, data: {confirm: "Are you sure?"} %>
  </div>


  <div class="posts-path">
    <%= link_to 'posts', posts_path %>
  </div>
</div>

<div class="render-comment-form">
  <!-- render comment partial -->
</div>


  <div class="post-comment">
    <%= link_to "New Comment", new_post_comment_path(@post) %>
  </div>

<div class="post-comments">
  <h3>Comments</h3>
  <div class="render-post-comments">
    <% @post.comments.each do |comment| %>
      <div class="comment-content">
        <%= comment.content %>
        <ul>
          <!-- <li><%= link_to "Show", post_comment_path(@post, comment) %></li> -->
          <li><%= link_to "Edit Comment", edit_post_comment_path(@post, comment) %></li>
          <li><%= link_to "Delete Comment", post_comment_path(@post, comment), method: :delete %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
