<h2>Post</h2>
<div class="post">
  <div class="post-title">
    <strong>Title:</strong>
    <%= @post.title %>
  </div>
  <div class="post-description">
    <strong>Description:</strong>
    <%= @post.description %>
  </div>

  <div class="posts-path">
    <%= link_to 'Back', posts_path, class: "btn btn-danger" %>
  </div>
</div>
