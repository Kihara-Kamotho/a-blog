<%= form_with(model: post, local:true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field:title %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field:description %>
  </div>
  <div class="post-image">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit %>
<% end %>
