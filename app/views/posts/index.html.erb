<div class="posts-list">
  <% @posts.each do |post| %>
    <div class="post-title">
      <strong>Title:</strong>
      <%= post.title %>
    </div>
    <div class="post-description">
      <strong>Description:</strong>
      <%= post.description %>
    </div>
    <div class="post-show">
      <%= link_to "Show", post_path(post), class: "btn btn-success" %>
    </div>
  <% end %>
</div>
