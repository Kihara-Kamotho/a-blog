<!-- new user form-->
<%= form_with(model: [:admin, user], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>
  <div class="form-group">
    <%= form.label :admin %>
    <%= form.check_box :admin, label: "Is an admin?" %>
  </div>

  <%= form.submit %>
<% end %>
