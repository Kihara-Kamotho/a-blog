<!DOCTYPE html>
<html>
  <head>
    <title>ABlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-light bg-faded">
    <div class="row mb-4">
      <%= render "layouts/nav" %>
    </div>
    <div class="row mt-4">
      <div class="notice">
        <p><!-- sign\-in sign_out notice--></p>
        <p><%= notice %></p>
        <p><%= alert %></p>
      </div>
        <%= yield %>
    </div>
    <div class="footer">
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
